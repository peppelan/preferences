{
  "title": "Peppe's macros",
  "rules": [
    {
      "description": "Map macro modifiers (right shift or button4)",
      "manipulators": [
        {
          "type": "basic",
          "from": 
            {
              "key_code": "right_shift"
            },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": [
                "left_option",
                "left_command",
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": 
            {
              "key_code": "grave_accent_and_tilde"
            },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": [
                "left_option",
                "left_command",
                "left_shift"
              ]
            }
          ]
        }
      ]
    }
  ]
}
